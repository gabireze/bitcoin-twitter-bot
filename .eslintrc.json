{
  "env": {
    "es2022": true,
    "node": true,
    "jest": true,
    "browser": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "error",
    "prefer-const": "error",
    "no-var": "error",
    "no-undef": "error",
    "eqeqeq": "error",
    "curly": "error"
  },
  "globals": {
    "document": "readonly",
    "window": "readonly"
  }
}
